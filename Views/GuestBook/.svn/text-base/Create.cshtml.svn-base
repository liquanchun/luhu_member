@model MvcMember.Models.GuestBook

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>反馈意见</title>
</head>
<body>
    <script src="../../Scripts/jquery-1.4.4.min.js" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#Title").focus();
        });
    </script>
    <div style="width:70%; font-size:88%; padding:30px;">
    @using (Html.BeginForm()) {
        @Html.ValidationSummary(true)
        <fieldset>
            <legend>请填写反馈意见</legend>
    
            <p>
                　　标题：
                @Html.TextBoxFor(model => model.Title, new { style = "width: 250px;" })
                @Html.ValidationMessageFor(model => model.Title)
            </p>
            <p><span>　　内容：</span></p>
            <p style="padding-left:77px;">
                @Html.TextAreaFor(model => model.LContent, new { cols ="60",rows="5"})
                @Html.ValidationMessageFor(model => model.LContent)
            </p>
    
            <p>
                联系方式：
                @Html.TextBoxFor(model => model.ContactWay,new { style = "width: 250px;" }) 请填写QQ或Email或电话。
                @Html.ValidationMessageFor(model => model.ContactWay)
            </p>    
            <p>
                　　　　　<input type="submit" value="保存提交" />
            </p>
        </fieldset>
    }
    </div>
    <div>
        　　@Html.ActionLink("返回列表", "Index")
    </div>
</body>
</html>


@model MvcMember.Models.Activity

@{
    ViewBag.Title = "新增会员活动";
}

<h2>新增会员活动</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('form').bind('keypress', function (e) {
            return e.keyCode !== 13;
        });
        $("#StartTime").datepicker();
        $("#EndTime").datepicker();
        $("#StartTime").val("");
        $("#EndTime").val("");
        $("#ActNo").focus();
    });
</script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>活动信息</legend>

        <p>
            @Html.LabelFor(model => model.ActNo)
            @Html.EditorFor(model => model.ActNo)
            @Html.ValidationMessageFor(model => model.ActNo)
        </p>

        <p>
            @Html.LabelFor(model => model.Name)
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </p>

        <p>
            @Html.LabelFor(model => model.ActType)
            @Html.DropDownList("ActType",
             new SelectList(ViewBag.EventType as System.Collections.IEnumerable,
            "ItemName", "ItemName", Model.ActType))
        </p>

        <p>
            @Html.LabelFor(model => model.ActIntegral)
            @Html.EditorFor(model => model.ActIntegral)
            @Html.ValidationMessageFor(model => model.ActIntegral)
        </p>

        <p>
            @Html.LabelFor(model => model.StartTime)
            @Html.EditorFor(model => model.StartTime)
            @Html.ValidationMessageFor(model => model.StartTime)
        </p>

        <p>
            @Html.LabelFor(model => model.EndTime)
            @Html.EditorFor(model => model.EndTime)
            @Html.ValidationMessageFor(model => model.EndTime)
        </p>
        <p>
            <input type="submit" value="保存" />
        </p>
    </fieldset>
}

<p>
    @Html.ActionLink("返回列表", "Index")
</p>

